      <!-- === 3D GPU LiDAR === -->
      <!-- === 3D GPU LiDAR (Ogre2) === -->
<sensor name="lidar_3d" type="gpu_lidar">
  <!-- position it a bit forward and up; adjust to taste -->
  <pose>0.10 0.00 0.08 0 0 0</pose>

  <always_on>1</always_on>
  <update_rate>5</update_rate>

  <!-- Use an absolute, short topic name to make ROS bridging easy -->
  <topic>/x3/lidar</topic>

  <!-- Configure horizontal/vertical scanning for a 3D cloud -->
  <ray>
    <scan>
      <horizontal>
        <!-- 360° sweep -->
        <samples>1024</samples>
        <resolution>1</resolution>
        <min_angle>-3.14159</min_angle>
        <max_angle> 3.14159</max_angle>
      </horizontal>
      <vertical>
        <!-- modest vertical FoV; widen or change samples as needed -->
        <samples>32</samples>
        <resolution>1</resolution>
        <min_angle>-0.50</min_angle>   <!-- ~ -28.6° -->
        <max_angle> 0.30</max_angle>   <!-- ~ +17.2° -->
      </vertical>
    </scan>
    <range>
      <min>0.10</min>
      <max>50.0</max>
      <resolution>0.01</resolution>
    </range>
    <noise type="gaussian">
      <mean>0.0</mean>
      <stddev>0.01</stddev>
    </noise>
  </ray>

  <!-- Show the frustum in the GUI if you like -->
  <visualize>true</visualize>

  <!-- Sets the frame id in headers for many sensor topics -->
  <ignition_frame_id>lidar_link</ignition_frame_id>
</sensor>



<plugin filename="libignition-gazebo-sensors-system.so"
        name="ignition::gazebo::systems::Sensors">
